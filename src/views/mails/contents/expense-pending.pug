extends ../layout.pug

block content
  p.
    Hello!
  p.
    #{employeeName} (#{employeeEmail}) has sent an expense claim for reimbursement as below: #{tripName}
  
  each e in expenses
    div
      p Name of expense:  #{e.name}
      p Expense category: #{e.category}
      p Transaction date: #{e.transactionDate}
      p Amount: #{e.amount} #{e.currency}
      p Description: #{e.message}