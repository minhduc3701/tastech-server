extends ../layout.pug

block content
  div.banner
    img(
      alt=""
      src="https://cdn2.hubspot.net/hub/6193707/hubfs/business-travel.jpg?width=550&name=business-travel.jpg")

  h2.text-center #{title}

  p We were unable to charge your payment for following trip payment:

  if (hadFailedFlight)
    h4 Flight:
    strong #{flight.departureSegments[0].departure} - #{flight.departureSegments[flight.departureSegments.length - 1].arrival}
    p Departure: #{flight.departureSegments[0].strDepartureDate}
    if (flight.returnSegments.length > 0)
      p Return: #{flight.returnSegments[flight.returnSegments.length - 1].strArrivalDate}

    hr

  if (hadFailedHotel)
    h3 Hotel:
    strong #{hotel.name}
    p Check-in: #{hotel.checkInDate}
    p Check-out: #{hotel.checkOutDate}
